<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.global.star.android.domain.entities.GithubUser" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.global.star.android.shared.screens.views.SharedToolBar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shared_background="@color/colorPrimaryDark"
            app:shared_drawableLeft="@drawable/ic_vector_back"
            app:shared_drawableRight="@drawable/ic_vector_open_in_browser" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/height_image_v0_75"
            android:layout_height="@dimen/height_image_v0_75"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_large"
            app:applyAvatar="@{true}"
            app:srcCompat="@{item.avatarUrl}" />

        <TextView
            style="@style/AppTheme.Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/margin"
            android:gravity="center"
            android:padding="@dimen/margin"
            android:text="@{item.name}"
            tools:text="@string/app_name" />

        <TextView
            style="@style/AppTheme.Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/margin"
            android:gravity="center"
            android:padding="@dimen/margin"
            android:text="@{item.bio}"
            tools:text="@string/app_name" />

        <TextView
            style="@style/AppTheme.Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/margin"
            android:gravity="center"
            android:padding="@dimen/margin"
            android:text="@{item.location}"
            tools:text="@string/app_name" />

    </LinearLayout>
</layout>