<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.global.star.android.screens.fragments.MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/actionMainToUser"
            app:destination="@id/userFragment"
            app:enterAnim="@anim/anim_slide_in_right"
            app:exitAnim="@anim/anim_slide_out_left"
            app:popEnterAnim="@anim/anim_slide_in_left"
            app:popExitAnim="@anim/anim_slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/userFragment"
        android:name="com.global.star.android.screens.fragments.UserFragment"
        android:label="UserFragment"
        tools:layout="@layout/fragment_user">

        <argument
            android:name="user"
            app:argType="com.global.star.android.domain.entities.GithubUser"
            app:nullable="true" />

    </fragment>

</navigation>