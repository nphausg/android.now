<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Button.Animator" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">@dimen/size_icon_x5</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppTheme.Button" parent="AppTheme.Button.Animator">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppTheme.Button.Outline" parent="AppTheme.Button.Outline.Animator">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="AppTheme.Button.Outline.Animator" parent="AppTheme.Button.Animator">
        <item name="backgroundTint">@android:color/white</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="strokeColor">#c0c6cc</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:layout_height">@dimen/size_icon_x6</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

</resources>